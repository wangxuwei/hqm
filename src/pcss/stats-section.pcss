.section{
	flex: 1;
	display: grid;
	flex-direction: column;
	grid-auto-flow: row;
	grid-template-rows: auto 1fr;
	.section-filter{
		display: flex;
		align-items: center;
		.filter-item{
			margin-left: 1rem;
			margin-bottom: 0;
			&:first-child{
				margin-left: 0;
			}
		}
	}
	.section-results{
		flex:1;
		display: flex;
		margin-top: 16px;
		overflow: hidden;
		.table{
			flex:1;
			.tbody{
				.tr{
					&:nth-child(2n+1){
						background: var(--bkg-light);
					}
				}
			}
		}
	}
}