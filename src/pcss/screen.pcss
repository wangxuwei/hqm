.screen{
	flex: 1;
	display: grid;
	flex-direction: column;
	grid-auto-flow: row;
	grid-template-rows: auto 1fr;
	.screen-header{
		display: grid;
		grid-template-columns: 264px 264px 1fr;
		align-items: center;
		.action-item{
			display: flex;
		}
	}
	.screen-main{
		flex:1;
		display: flex;
		margin-top: 16px;
		overflow: hidden;
		.table{
			flex:1;
			.tbody{
				.tr{
					&:nth-child(2n+1){
						background: var(--bkg-light);
					}
				}
			}
		}
	}
}