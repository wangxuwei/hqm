{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "hqm",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.friping.hqm",
      "targets": "all",
      "macOS":{
        "exceptionDomain": "baidu.com"
      }
    },
    "allowlist": {
      "dialog": {
        "open": true, 
        "save": true
      },
      "window": {
        "create": true,
        "close": true,
        "center": true,
        "show": true
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "windows": ["oauth_login"],
          "domain": "localhost",
          "enableTauriAPI": true
        },
        {
          "windows": ["oauth_login"],
          "domain": "baidu.com",
          "enableTauriAPI": true
        }
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "hqm",
        "width": 1024,
        "height": 600
      }
    ]
  }
}
